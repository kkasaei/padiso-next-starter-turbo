# ===========================================
# SearchFit — Environment Variables
# Copy this file to .env and fill in the values.
# See ENV_REFERENCE.md for per-environment values.
# ===========================================

# -------------------------------------------
# Database (Postgres)
# -------------------------------------------
DATABASE_URL="postgresql://USER@localhost:5432/searchfit_turbo"

# -------------------------------------------
# App URLs
# -------------------------------------------
NEXT_PUBLIC_CLIENT_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# -------------------------------------------
# Authentication (Clerk)
# -------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# -------------------------------------------
# Billing (Stripe)
# -------------------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
BILLING_STRIPE_SECRET_KEY=
# Local dev: auto-generated by Stripe CLI → stripe listen --forward-to localhost:3000/api/billing/webhook
BILLING_STRIPE_WEBHOOK_SECRET=

NEXT_PUBLIC_BILLING_PRICE_GRWOTH_PLAN_MONTHLY_ID=
NEXT_PUBLIC_BILLING_PRICE_GRWOTH_PLAN_YEARLY_ID=

# -------------------------------------------
# Trigger.dev
# -------------------------------------------
TRIGGER_PROJECT_ID=
TRIGGER_SECRET_KEY=

# -------------------------------------------
# Analytics — PostHog
# -------------------------------------------
NEXT_PUBLIC_ANALYTICS_POSTHOG_KEY=
NEXT_PUBLIC_ANALYTICS_POSTHOG_HOST=https://us.i.posthog.com

# -------------------------------------------
# Analytics — Google Analytics
# -------------------------------------------
NEXT_PUBLIC_ANALYTICS_GA_MEASUREMENT_ID=
NEXT_PUBLIC_ANALYTICS_GA_DISABLE_LOCALHOST_TRACKING=true
NEXT_PUBLIC_ANALYTICS_GA_DISABLE_PAGE_VIEWS_TRACKING=false

# -------------------------------------------
# Analytics — Hotjar
# -------------------------------------------
NEXT_PUBLIC_ANALYTICS_HOTJAR_ID=

# -------------------------------------------
# Cloudflare Turnstile
# -------------------------------------------
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=
NEXT_PUBLIC_ENABLE_TURNSTILE=true
NEXT_PUBLIC_TURNSILE_SITE_KEY_CONTACT_FORM=
TURNSILE_SECRET_KEY_CONTACT_FORM=
DISABLE_RATE_LIMIT=true

# -------------------------------------------
# Cloudflare R2 / CDN
# -------------------------------------------
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
NEXT_PUBLIC_CDN_URL=

# -------------------------------------------
# Email (Resend)
# -------------------------------------------
EMAIL_FROM="SearchFit.ai <noreply@mail.searchfit.ai>"
EMAIL_FEEDBACK_INBOX=hi@searchfit.ai
EMAIL_REPLY_TO=hi@searchfit.ai
EMAIL_CONTACT_FORM_TO=hi@searchfit.ai
EMAIL_RESEND_API_KEY=

# -------------------------------------------
# Monitoring — Sentry
# -------------------------------------------
MONITORING_SENTRY_ORG=
MONITORING_SENTRY_PROJECT=
MONITORING_SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_MONITORING_SENTRY_DSN=
SENTRY_SUPPRESS_TURBOPACK_WARNING=1

# -------------------------------------------
# Slack
# -------------------------------------------
SLACK_WEBHOOK_URL=

# -------------------------------------------
# AI / LLM
# -------------------------------------------
AI_GATEWAY_API_KEY=

# -------------------------------------------
# Newsletter
# -------------------------------------------
NEWSLETTER_SEGMENT_ID=

# -------------------------------------------
# Integrations
# -------------------------------------------
INTEGRATION_ENCRYPTION_KEY=
INTEGRATION_GOOGLE_CLIENT_ID=
INTEGRATION_GOOGLE_CLIENT_SECRET=
INTEGRATION_SERPAPI_API_KEY=
INTEGRATION_REDDIT_CLIENT_ID=
INTEGRATION_REDDIT_CLIENT_SECRET=

# -------------------------------------------
# Upstash Redis
# -------------------------------------------
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# -------------------------------------------
# Feature Flags (DEPRECATED - moved to admin_settings table)
# -------------------------------------------
# NEXT_PUBLIC_FLAG_IS_WAITLIST is now controlled via /control/settings
# Use the "Waitlist Mode" toggle in admin settings instead
